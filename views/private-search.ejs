<!-- latest-messages.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Add CSS styling for consistent spacing */
        .scroll-container {
            max-height: 400px; /* Set a max height for the scroll container */
            overflow-y: scroll; /* Enable vertical scrollbar */
        }
        strong {
            margin-right: 10px;
            min-width: 80px; /* Adjust the width as needed for spacing */
            display: inline-block;
        }

        .label {
            min-width: 80px; /* Adjust the width as needed for spacing */
            display: inline-block;
            font-weight: bold;
        }


        button {
      background-color: #4caf50;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #45a049;
    }
    </style>
    <%- include('templates/head'); %>
    <title>Latest Messages</title>
</head>
<body>
    <%- include('templates/header'); %>
    <main class="d-flex flex-nowrap" style="height:550px;">
        <%- include('templates/nav'); %>
        <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 1060px;">
            <h3>Latest Private Messages</h3>

    <!-- Search form -->
    <form action="/private-search" method="get">
        <label for="username">Search by Username:</label>
        <input type="text" id="username" name="username" value="<%= searchTerm %>" />
        <button type="submit">Search</button>
    </form>

    <% if (privateMessages.length === 0) { %>
        <p>No messages found.</p>
    <% } else { %>
        <div class="scroll-container">
                <% privateMessages.forEach(privat => { %>
                    <div class="card">
                        <div class="card-body">
                        <h5>Messages between <%= privat.participant1 %> and <%= privat.sender %></h5>
                        <hr style="border-top: 2px solid #b80909;">
                        <span class="message-content"><%= privat.message %></span>
                        <small>Time: <%= privat.sentTime %></small>
                        </div>
                      </div>
                <% }); %>

        <% if (hasMore) { %>
            <!-- Add a "More" button to fetch the next page of messages -->
            <a href="/private-search?page=<%= page + 1 %>&username=<%= searchTerm %>">More</a>
        <% } %>
    <% } %>

</div>
</div>
</main>
    <%- include('templates/footer'); %>
<script src="js/chat.js"></script>
</body>
</html>
