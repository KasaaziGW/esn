
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/head'); %>
    <title>Users</title>
</head>
<body>

    <%- include('templates/header'); %>
    <main class="d-flex flex-nowrap" style="height:500px;">
        <%- include('templates/nav'); %>
        
        <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 100%;">
            <div id="content">
                <div class="container-fluid">
                    <div class="col-md-6">
                        <h4 class="display-4">Announcements</h4>
                        <%- include('templates/errors') %>
                        <%- include('templates/success') %>
                
                        <% if (data.privilege === 'Administrator' || data.privilege === 'Cordinator') { %>
                        <form style="width: 100%" method="POST" action="/post-announcement">
                            <div class="form-group" style="margin-bottom: 10px;">
                              <textarea 
                                placeholder="Enter the announcement here" 
                                rows="3"
                                class="form-control"
                                style="width: 100%"
                                name="announcement"
                                ></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Post</button>
                          </form>
                        <% } %>

                        <% announcements.forEach(an => { %>
                            <div class="card">
                                <div class="card-body">
                                  <p><%= an.announcement %></p>
                                  <small>Posted by <%= an.posterName %> at <%= an.sentTime %></small>
                                </div>
                              </div>
                        <% }); %>
                </div>

                <%- include('templates/footer'); %>
                
                </div>
            </div>
        </div>
        
    </main>
</body>
</html>