
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/head'); %>
    <title>Users</title>
</head>
<body>

    <%- include('templates/header'); %>
    <main class="d-flex flex-nowrap" style="height:500px;">
        <%- include('templates/nav'); %>
        
        <div class="d-flex flex-column flex-shrink-0 p-3" style="width: 100%;">
            <div id="content">
                <div class="container-fluid">
                    <div class="col-md-6">
                        <h4 class="display-4">Users</h4>
                        <small>Click on the user's name to edit their profile</small>
                
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Privilege</th>
                                <th>Status</th>
                                <th>Online Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><a href="/users/<%= user._id %>/"><%= user.fullname %></a></td>
                                    <td><%= user.username %></td>
                                    <td><%= user.privilege %></td>
                                    <td><%= user.status %></td>
                                    <td><%= user.online ? 'Online' : '-' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                        </table>
                    </table>
                </div>


                <%- include('templates/footer'); %>
                
                </div>
            </div>
        </div>
        
    </main>
    <!-- <%- include('templates/footer'); %> -->
</body>
</html>